<%# students =  ["http://imgur.com/jgbL2Sx.jpg", "http://imgur.com/2KFsJfe.jpg", "http://i.imgur.com/FXJiQcy.jpg", "http://i.imgur.com/x1t2grP.jpg", "http://i.imgur.com/NUR4HFK.png", "http://imgur.com/RZt07dq.jpg", "http://i.imgur.com/z87cszh.jpg", "http://i.imgur.com/9ZCUerO.jpg"] %>

<% @students.each do |student| %>
  <div class="container">
    <div class="row row-content">
      <div class="col-xs-12 col-sm-4">
        <a href="www.google.com">
          <div style="background-image: url('<%= student.photo_link %>');" class="student-card"></div>
        </a>
      </div>
      <div class="col-xs-12 col-sm-8">

          <div class="row row-content">
            <div class="col-xs-4 col-xs-offset-2 col-sm-4 col-sm-offset-0">
              
              <div class="row row-content">
                <div class="col-xs-12">
                  <h2><%= student.first_name %></h2>
                  <h3><%= student.last_name%></h3>
                </div>
              </div>
              
            </div>
            <div class="col-xs-4 col-sm-4 col-sm-offset-4 col-md-offset-2">
              <h3 class="text-right"><%= student.major %></h3>
            </div>
          </div>
        
          <div class="row row-content">
            <div class="col-xs-12">
              <%# Maybe a well here with a quote? %>
            </div>
          </div>
        
      </div>
    </div>
  </div>
  
<% end %>



<div class="container">
  <div class="row row-content">
    <p class="navclear"></p>
  </div>
</div>

<div class="container">
  <div class="row row-content">
    <div class="col-xs-12">
      <h1 class="text-center">Welcome to <%= @student.nickname %>'s Page!</h1>
    </div>
  </div>
</div>


<div class="container">
  <div class="row row-content">
    <div class="col-xs-12 col-sm-4">
      <a href="www.google.com">
        <div style="background-image: url('<%= @student.photo_link %>');" class="student-card"></div>
      </a>
    </div>
    <div class="col-xs-12 col-sm-8">

        <div class="row row-content">
          
          <div class="col-xs-4 col-xs-offset-2 col-sm-4 col-sm-offset-0">
            <div class="row row-content">
              <div class="col-xs-12">
                <h2><%= @student.first_name %></h2>
                <h3><%= @student.last_name%></h3>
              </div>
            </div>
          </div>
          
          <div class="col-xs-4 col-sm-4 col-sm-offset-4 col-md-offset-2">
            <h3 class="text-right"><%= @student.major %></h3>
          </div>

        </div>
      
        <div class="row row-content">
          <div class="col-xs-10 col-xs-offset-2 col-sm-12 col-sm-offset-0">
            <!-- <h3>Home Country: <%# @student.country %></h3> -->
          </div>
        </div>
      
        <div class="row row-content">
          <div class="col-xs-10 col-xs-offset-2 col-sm-12 col-sm-offset-0">
            <!-- <h3>Major and stuff</h3> -->
          </div>
        </div>

    </div>
  </div>

  <div class="container">
    <div class="row row-content">
      <div class="col-xs-12 col-sm-6">
        <h1>Student Presentation Video</h1>
      </div>
    
      <div class="col-xs-12 col-sm-6">
        <p style="padding: 10px;"></p>
        <iframe width="534" height="300" src="<%= @presentation.youtube_embedded_link %>" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>
